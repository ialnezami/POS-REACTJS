# Application
NODE_ENV=development
PORT=4000

# Development Mode - Set to 'true' to skip authentication (NEVER use in production!)
DEV_SKIP_AUTH=false

# Database - Using Docker MongoDB
MONGODB_URI=mongodb://admin:pos_password_123@localhost:27017/pos?authSource=admin
MONGODB_DB_NAME=pos

# Redis - Using Docker Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=0

# JWT - IMPORTANT: Change these in production!
JWT_SECRET=pos-system-jwt-secret-key-2024-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=pos-system-jwt-refresh-secret-key-2024-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
